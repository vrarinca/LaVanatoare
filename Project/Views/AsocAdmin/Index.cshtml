@model Library.Data.Models.PrivateUser
@{
    ViewBag.Title="Dashboard Admin System";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
   
    <script src="./js/jquery.min.js"></script>
    <script src="./js/bootstrap.bundle.min.js"></script>
    
    <link rel="stylesheet" href="./css/bootstrap.min.css">
    <link rel="stylesheet" href="./css/sys_admin.css">

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="flex-container1">

        <nav class="navbar navbar-expand-md navbar-light " id="navigation-bar">
            <div id="admin-vanatoare">
            <a class="navbar-brand navigation-font"  href="#">Administrare fonduri vanătoare</a>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <span class="badge badge-success userLog"> Administrator Asociație </span>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="navbar-nav mr-auto">
                    <div class="nav-item active">
                        <a class="nav-link" href="#">Utilizatori asociație<span class="sr-only">(current)</span></a>
                    </div>
                    <div class="nav-item ">
                        <a class="nav-link" href="#">Administrare asociație<span class="sr-only">(current)</span></a>
                    </div>
                    <div class="nav-item ">
                        <a class="nav-link" href="#">Autorizații<span class="sr-only">(current)</span></a>
                    </div>
                    <div class="nav-item ">
                        <a class="nav-link" href="/fonduri">Fonduri<span class="sr-only">(current)</span></a>
                    </div>
                    
                </div>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">@ViewData["CurrentUser"]</a>
                    </li>
                    <li class="nav-item">
                            <a class="nav-link" href="/logout"  >Logout</a>
                        
                    </li>
                </ul>
            </div>
        </nav>

        <div class="flex-container">
            <div class="user-select flex-container1">
                <div class="user-select-window">
                    <div class="user-select-window-top">
                        <div id="search-bar">
                            <form class="form-inline my-2 my-lg-0" class="text-center" id="search-form" action="/AsocAdmin" method="get">
                                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="name" id="name">
                                <button class="btn btn-outline-success my-2 my-sm-0 bar-button search-button" type="submit">Search</button>
                                <button class="btn btn-outline-success my-2 my-sm-0 bar-button search-button">New user</button>
                            </form>
                        </div>
                    </div>
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nume</th>
                                <th scope="col">Email</th>
                                <th scope="col">Funcție</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in (dynamic)ViewData["PrivateUsers"])
                            {
                                <tr>
                                    <th scope="row">@user.Id</th>
                                    <td>@user.Name</td>
                                    <td>@user.Email</td>
                                    <td>@user.Function</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <nav aria-label="Page navigation example">
                        <form class="text-center" id="switch_page_form" action="/AsocAdmin" method="get">
                            @if (ViewBag.CurrentPage == 1)
                            {
                                <input type="submit" class="page-item" class="page-link" name="page_nb" disabled value="First">
                            }
                            else
                            {
                                <input type="submit" class="page-item" class="page-link" name="page_nb" value="First">
                            }


                            @for (var i = @ViewBag.CurrentPage - 1; i < ViewBag.CurrentPage + 2; i++)
                            {
                                if (i > ViewBag.LastPage)
                                {
                                    break;
                                }
                                if (i > 0)
                                {
                                    <input type="submit" class="page-item" name="page_nb" class="page-link" value=@i>

                                }


                            }

                            @if (ViewBag.CurrentPage == ViewBag.LastPage)
                            {
                                <input type="submit" class="page-item" class="page-link" name="page_nb" disabled value="Last">
                            }
                            else
                            {
                                <input type="submit" class="page-item" class="page-link" name="page_nb" value="Last">
                            }
                        </form>
                    </nav>





                </div> 
                

            </div>
            <div class="user-info">
                
            </div>

        </div>
        


    </div>
</body>
</html>
